# SSH known hosts completion
if [ -r ~/.ssh/known_hosts ]
then
  hosts=(`sed 's/^\([[:alnum:]\.]*\).*/\1/' < ~/.ssh/known_hosts`)
  compctl -k hosts -x 'c[-1,-l]' -u -- + -x 'm[2,2]' -u -S "@" -- + -x 'n[1,@]' -k hosts -- ssh
  compctl -f + -k hosts -S ":" + -u -S "@" -x 'n[1,@]' -k hosts -S ":" -- scp
fi

