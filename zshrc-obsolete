raspi-install() {
    for pkg in "$@"; do
        apt-get download --allow-unauthenticated "$pkg":armhf && dpkg-deb -x "$pkg"_*.deb $RASPI_SDK_ROOT/chroot && rm -f "$pkg"_*_armhf.deb
    done
}

# big-endian hexdump
